  font-size: 44rpx;
  font-weight: bold;
}

.list-step-wrap {
  background: #fff;
}

.list-step-wrap .item-cell {
  float: left;
  width: 33.33%;
  box-sizing: border-box;
  text-align: center;
  border-right: 1px solid #ebebeb;
  border-bottom: 1px solid #ebebeb;
}

.list-step-wrap .item-cell navigator {
  padding: 40rpx 0;
}

.list-step-wrap .item-cell .pic-icon {
  width: 41rpx;
