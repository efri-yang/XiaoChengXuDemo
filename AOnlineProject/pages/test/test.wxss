  line-height: 41rpx;
  margin: 0 auto 15rpx;
  overflow: hidden;
}

.list-step-wrap .item-cell .txt {
  text-align: center;
  color: #3c4050;
  font-size: 24rpx;
  display: block;
  margin-bottom: 15rpx;
}

.list-step-wrap .item-cell .num {
  color: #666;
  font-size: 42rpx;
  position: relative;
  clear: both;
  display: inline-block;
}

.list-step-wrap .item-cell .num .circle {
  width: 15rpx;
